<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.platosys.keylocks">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".services.LockStoreService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".services.LockStoreIntentService"
            android:exported="false" />

        <activity
            android:name=".activities.CreateKey"
            android:label="@string/title_activity_create_key"
            android:parentActivityName=".activities.TestPassphrase"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.platosys.keylocks.activities.TestPassphrase" />
        </activity>
    </application>

</manifest>